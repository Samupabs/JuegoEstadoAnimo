<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonComenzar"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#cc00cc "
            android:text="Comenzar"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/botonReiniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0080ff"
            android:text="Reiniciar"
            app:cornerRadius="25dp" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayaut"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="6dp">

        <Button
            android:id="@+id/button_1"
            style="@style/resaltadoRojo"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="0"
            app:layout_row="0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_4"
            style="@style/resaltadoNegro"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="0"
            app:layout_row="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_7"
            style="@style/resaltadoRojo"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="0"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_2"
            style="@style/resaltadoNegro"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="1"
            app:layout_row="0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_3"
            style="@style/resaltadoRojo"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="2"
            app:layout_row="0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_5"
            style="@style/resaltadoRojo"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="1"
            app:layout_row="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_8"
            style="@style/resaltadoNegro"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="1"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_6"
            style="@style/resaltadoNegro"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="2"
            app:layout_row="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_9"
            style="@style/resaltadoRojo"
            android:layout_width="132dp"
            android:layout_height="200dp"
            app:cornerRadius="10dp"
            app:layout_column="2"
            app:layout_row="2"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondopantalla" />

</LinearLayout>
